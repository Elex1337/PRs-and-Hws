using System;

class Program

{
    public static void Main()
    {
        Console.WriteLine("1 число ");
        double a = Convert.ToDouble(Console.ReadLine());
        Console.WriteLine("2 число ");
        double b = Convert.ToDouble(Console.ReadLine());
        double total;
        Console.Write("Оператор ");
        char oper = Convert.ToChar(Console.Read());
            

        if (oper == '+')
        {
            total = a + b;
            Console.Write(total);
        }
        else if (oper == '-')
        {
            total = a - b;
            Console.Write(total);
        }
        else if (oper == '*')
        {
            total = a * b;
            Console.Write(total);
        }
        else if (oper == '/')
        {
            total = a / b;
            Console.WriteLine(total);
        } else
        {
            Console.Write("error");
        }
        

    }
}
